<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="icon" href="data:,">
    <title>yukia audio uploads</title>
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6 m-auto">
                <h1 class="text-center display-4 my-4">YUKIBEATS AUDIO COLLECTION / WEBSITE LIBRARY</h1>
                <a href="/new"><button class="btn btn-primary" style="width: 100%;">UPLOAD A NEW SONG</button></a>
                <hr>
                <% audios.forEach(function(audio) { %>
                    <div class="card card-body">
                        <div class="row">
                            <div class="col-4 m-auto ">
                                <div>
                                    name: <%=audio.name%>
                                </div>
                                <div>
                                    BPM: <%=audio.bpm%>
                                </div>
                                <div>
                                    duration: <%=audio.duration%>
                                </div>
                            </div>
                            <div class="col-6 m-auto">
                                <a href="/audios/<%= audio._id %>/edit "><button type="button"
                                        class="btn btn-sm btn-outline-success">Edit</button></a>
                                <form class="delete-form"
                                    action="/audios/<%= audio._id %>?_method=DELETE"
                                    method="POST">
                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                        <audio src="<%= audio.source %>" controls style="width: 100%;" type="<%= audio.type %>"></audio>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
        crossorigin="anonymous"></script>
</body>

</html>